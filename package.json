{
  "private": true,
  "author": "fengzilong",
  "license": "MIT",
  "scripts": {
    "site": "node packages/_site/scripts/docs && webpack --config packages/_site/scripts/webpack.config.site.js",
    "site:watch": "webpack --config packages/_site/scripts/webpack.config.site.js -w",
    "gh-pages": "node packages/_site/scripts/gh-pages",
    "deploy": "npm run site && npm run gh-pages",
    "clean": "lerna clean",
    "patch": "np patch --skip-cleanup",
    "lint": "eslint packages/**/*.rgl --quiet",
    "lintcss": "stylelint packages/_theme/**/*.less",
    "boot": "lerna bootstrap",
    "build": "lerna run build --concurrency 10 && lerna run entry && lerna run example",
    "play": "npm run boot && opn http://127.0.0.1:9000 && play --resolve-fallback play/node_modules --preview-template play/template.html",
    "test": "npm run lint && npm run lintcss",
    "precommit": "npm test"
  },
  "eslintConfig": {
    "extends": "mo/browser",
    "plugins": [
      "rgl"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": "tab",
      "number-leading-zero": "never",
      "function-comma-space-after": "never"
    }
  },
  "devDependencies": {
    "anywhere": "^1.4.0",
    "autoprefixer": "^6.3.7",
    "autosize": "^3.0.20",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-runtime": "^6.9.2",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "de-indent": "^1.0.2",
    "director": "^1.2.8",
    "dom-align": "^1.4.0",
    "eslint": "^3.15.0",
    "eslint-config-mo": "^0.2.0",
    "eslint-plugin-rgl": "0.0.1",
    "eventemitter2": "^2.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "front-matter": "^2.1.0",
    "gh-pages": "^0.11.0",
    "glob": "^7.0.5",
    "html-webpack-plugin": "^2.22.0",
    "husky": "^0.13.2",
    "is-obj": "^1.0.1",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.38",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "lodash": "^4.13.1",
    "marked": "^0.3.5",
    "opn-cli": "^3.1.0",
    "postcss-loader": "^0.9.1",
    "pure-cli": "latest",
    "pure-loader": "^1.0.2",
    "regular-loader": "^0.1.4",
    "regular-play-cli": "^0.4.1",
    "regularjs": "0.4.4",
    "style-loader": "^0.13.1",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1"
  },
  "peerDependencies": {},
  "dependencies": {}
}
